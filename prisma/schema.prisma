generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model SiteMetadata {
  id            String     @id @default(uuid())
  about         String?
  privacyPolicy String?
  email         String   @unique
  phoneNumber   String
  socialMedia   Json 
}

model Region {
  id      Int    @id @default(autoincrement())
  name    String @unique
}
